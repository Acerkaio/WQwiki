#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../vitepress@1.0.0-rc.25/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../vitepress@1.0.0-rc.25/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../vitepress@1.0.0-rc.25/node_modules/vitepress/bin/vitepress.js" "$@"
else
  exec node  "$basedir/../../../../../vitepress@1.0.0-rc.25/node_modules/vitepress/bin/vitepress.js" "$@"
fi
